<% layout("layouts/boilerplate") %>

<div class="row d-flex justify-content-center">
    <div class="col-9 mt-1 query-title">Modify your comment</div>
</div>

<div class="row d-flex justify-content-center post-canvas">
    <div class="col-9 post-container bg-dark text-light mb-3 mt-2 pt-2 d-flex">
        <form action="/comments/<%=foundComment._id%>?_method=PUT" method="post" class="needs-validation" novalidate>
            <div>
              <p><b>Posting as: </b><%= currentUser.username %> </p>
            </div>
            <div>
            <label for="comment" class="my-2 form-label">Comment:</label>
            <textarea name="comment" class="form-control" id="comment" maxlength="300" required autocomplete="off"><%=foundComment.comment%></textarea>
            <input type="hidden" name="url" value="<%=page%>">
            </div>
            <button class="btn btn-light">Submit</button>
        </form>
    </div>
</div>

<link rel="stylesheet" href="/style/new.css">